<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game4">

    <TextView
        android:id="@+id/textViewQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="69dp"
        android:text="What do you see in the picture?"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeAct4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="16dp"
        android:onClick="goToMainAct"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewR"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewIntrovert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQR"
        app:srcCompat="@drawable/rorschach1" />

    <ListView
        android:id="@+id/listViewR"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewPerceiving"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textBoxQCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="27dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPerceiving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="19dp"
        android:text="Perceiving:"
        app:layout_constraintBottom_toBottomOf="@+id/listViewR"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewJudging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Judging:"
        app:layout_constraintBottom_toTopOf="@+id/textViewPerceiving"
        app:layout_constraintStart_toStartOf="@+id/textViewPerceiving" />

    <TextView
        android:id="@+id/textViewIntrovert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Introvert:"
        app:layout_constraintBottom_toTopOf="@+id/textViewExtrovert"
        app:layout_constraintStart_toStartOf="@+id/textViewExtrovert" />

    <TextView
        android:id="@+id/textViewExtrovert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Extrovert:"
        app:layout_constraintStart_toEndOf="@+id/listViewR"
        app:layout_constraintTop_toTopOf="@+id/listViewR" />

    <TextView
        android:id="@+id/textViewSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Sensor:"
        app:layout_constraintStart_toStartOf="@+id/textViewIntuitive"
        app:layout_constraintTop_toBottomOf="@+id/textViewIntuitive" />

    <TextView
        android:id="@+id/textViewFeeler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Feeler:"
        app:layout_constraintBottom_toTopOf="@+id/textViewJudging"
        app:layout_constraintStart_toStartOf="@+id/textViewJudging" />

    <TextView
        android:id="@+id/textViewIntuitive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Intuitive:"
        app:layout_constraintStart_toStartOf="@+id/textViewExtrovert"
        app:layout_constraintTop_toBottomOf="@+id/textViewExtrovert" />

    <TextView
        android:id="@+id/textViewThinker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Thinker:"
        app:layout_constraintStart_toStartOf="@+id/textViewSensor"
        app:layout_constraintTop_toBottomOf="@+id/textViewSensor" />

</androidx.constraintlayout.widget.ConstraintLayout>